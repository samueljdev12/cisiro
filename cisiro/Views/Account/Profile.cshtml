@model cisiro.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto border">
            <h2 class="text-center mt-4 mb-2">Your Profile</h2>

            <dl class="row">
                <dt class="col-sm-4">First Name:</dt>
                <dd class="col-sm-8">@Model.User.firstName</dd>

                <dt class="col-sm-4">Last Name:</dt>
                <dd class="col-sm-8">@Model.User.lastName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.User.Email</dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Model.User.mobileNumber</dd>
                
                <div class="text-center">
                     @Html.ActionLink("Edit", "Edit", "Account", null, new { @class = "btn btn-primary m-4" })

                </div>
            </dl>

            <h3 class="text-center mt-4">Application Details</h3>

            @if (Model.UserApplication != null)
            {
                <p class="text-center">University: @Model.UserApplication.university</p>
                <p class="text-center">Degree: @Model.UserApplication.degree</p>
                <!-- Add other application properties as needed -->
            }
            else
            {
                <p class="text-center">You have not applied</p>
            }
        </div>
    </div>
</div>


