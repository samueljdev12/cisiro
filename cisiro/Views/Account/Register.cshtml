@model cisiro.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Register</h2>
             @Html.ActionLink("Already have an account? Login", "Login", "Account", new { @class = "btn btn-primary" })
             <p class="text-info m-2">All fields on this form are required</p>
            <form method="Post">
                    <span asp-validation-for="firstName" class="alert-danger"></span>
                    <label asp-for="firstName" class="form-label"></label>
                    <input asp-for="firstName" class="form-control"/>
            
                    <span asp-validation-for="lastName" class="alert-danger"></span>
                    <label asp-for="lastName" class="form-label"></label>
                    <input asp-for="lastName" class="form-control"/>
                
                    <span asp-validation-for="email" class="alert-danger"></span>
                    <label asp-for="email" class="form-label"></label>
                    <input asp-for="email" class="form-control"/>
                    
                 
             
                    <span asp-validation-for="mobileNumber" class="alert-danger"></span>
                    <label asp-for="mobileNumber" class="form-label"></label>
                    <input asp-for="mobileNumber" class="form-control"/>
              
             
                    <span asp-validation-for="password" class="alert-danger"></span>
                    <label asp-for="password" class="form-label"></label>
                    <input asp-for="password" class="form-control"/>
            
                 
                        <span asp-validation-for="confirmPassword" class="alert-danger"></span>
                        <label asp-for="confirmPassword" class="form-label"></label>
                        <input asp-for="confirmPassword" class="form-control"/>
           
                    <div class="text-center">
                        <button class="btn btn-primary mt-3">Register</button>
                    </div>
                
            </form>
            
           
        </div>
    </div>
</div>
