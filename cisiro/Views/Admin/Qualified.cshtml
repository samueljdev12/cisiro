@model List<cisiro.Models.ApplicationWithUserViewModel>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Applications</h2>
            
            <table class="table">
                <thead>
                <tr>
                    <th>Application ID</th>
                    <th>Candidate Name</th>
                    <th>GPA</th>
                    <th>University</th>
                    <th>Degree</th>
                    <th>Mobile</th>
                     <th>Email</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Application.applicationId</td>
                        <td>@item.CandidateName</td>
                        <td>@item.Application.gpa.ToString()</td>
                        <td>@item.Application.university</td>
                        <td>@item.Application.degree</td>
                        <td>@item.mobileNumber</td>
                        <td>@item.Email</td>
                        <td>@Html.ActionLink("View Cover letter", "", "")</td>
                         <td>@Html.ActionLink("Send Email", "SendEmail", "Admin", new { email = item.Email, name = item.CandidateName }, null)</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>